-------------------------------- MODULE Zarb_Liveness --------------------------------
EXTENDS Zarb

CONSTANT MaxHeight


-----------------------------------------------------------------------------
(***************************************************************************)
(* Liveness: A node eventually moves to a new height.                      *)
(***************************************************************************)
Success == <>(IsCommitted(MaxHeight))

LiveSpec ==
    /\ Spec /\ SF_vars(Next)

Constraint == ~IsCommitted(MaxHeight)
